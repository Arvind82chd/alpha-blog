<h1 >Login:</h1>
<div class="container">
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
    <div id="form"  class="text-center shadow p-3 mb-3 rounded" >
        <div class="form-group row">
            <p class="col-2 col-form-lable">
                <%= f.label :email %></br>
                <div class="col-10">
                    <%= f.text_field :email, class: "form-control shadow rounded", placeholder: 'User Email' %>
                </div>
            </p>
        </div>

        <div class="form-group row">
            <p class="col-2 col-form-lable">
                <%= f.label :password %></br>
                <div class="col-10">
                    <%= f.text_field :password, class: "form-control shadow rounded", placeholder: 'Enter Password' %>
                </div>
            </p>
        </div>

            <p>
            <%= f.submit 'Log in', class: "btn btn-outline-success" %>
            </p>

    </div>
    <% end %>
    <p><%= link_to '[ Cancel and return to articles list ]', articles_path, class: "text-warning" %></p>

</div>