<div class="container">
    <%= render 'shared/errors', obj: @user %>
    <%= form_with(model: @user, local: true) do |f| %>
    <div id="form"  class="text-center shadow p-3 mb-3 rounded" >
        <div class="form-group row">
            <p class="col-2 col-form-lable">
                <%= f.label :username %></br>
                <div class="col-10">
                    <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "User Name" %>
                </div>
            </p>
        </div>
        <div class="form-group row">
            <p class="col-2 col-form-lable">
                <%= f.label :email %></br>
                <div class="col-10">
                    <%= f.text_field :email, class: "form-control shadow rounded", placeholder: 'User Email' %>
                </div>
            </p>
        </div>

        <div class="form-group row">
            <p class="col-2 col-form-lable">
                <%= f.label :password %></br>
                <div class="col-10">
                    <%= f.text_field :password, class: "form-control shadow rounded", placeholder: 'User Password' %>
                </div>
            </p>
        </div>

            <p>
            <%= f.submit(@user.new_record? ? "Sign up" : "Update Account", class: "btn btn-outline-success") %>
            </p>

    </div>
    <% end %>
    <p><%= link_to '[ Cancel and return to articles list ]', articles_path, class: "text-warning" %></p>

</div>